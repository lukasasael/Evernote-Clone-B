<h4>Partial Form</h4>
<input type="text" name="title" value="<%= note.title -%>" />
<br />
<select name="category_id">
    <% for(let i=0; i < categories.length; i++) { %>
        <option 
            value="<%= categories[i].id -%>"
            <% if (note.category_id == categories[i].id) { -%>
            selected
            <% } -%> 
        >
            <%= categories[i].name -%>
        </option>
    <% } %>
</select>

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
            <% for(let i=0; i < tags.length; i++) { %>
                <input 
                    type="checkbox"
                    name="tags[]"
                    value="<%= tags[i].id -%>"
                    <% if (note.tags.includes(tags[i].id)) { -%>
                    checked
                    <% } -%>
                >
                <label>
                    <%= tags[i].name -%>
                </label>
            <% } %>        
    </div>
</div>

<br />
<textarea
    class="notes__body"
    name="body"
    rows="5"
    cols="20"><%= note.body -%></textarea>
<br />